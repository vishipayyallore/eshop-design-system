{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "design-system": {
      "projectType": "library",
      "root": "projects/design-system",
      "sourceRoot": "projects/design-system/src",
      "prefix": "eshop",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/design-system/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/design-system/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/design-system/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "no-cache": true,
            "tsConfig": "tsconfig.spec.json"
          }
        }
      }
    },
    "storybook": {
      "projectType": "application",
      "root": "stories",
      "sourceRoot": "stories",
      "architect": {
        "build": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "tsConfig": "tsconfig.json",
            "styles": ["projects/design-system/src/lib/styles/reset.scss"],
            "scripts": []
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
